<h1><%= @wine.name %></h1>
<p>Variety: <%= link_to @wine.variety.name, variety_path(@wine.variety) %></p>
<p>Average Rating: <%= @wine.average_rating %></p>
<% if @wine.reviews.count == 0 %>
  <div class="btn"><%= link_to "Create Review", new_wine_review_path(@wine) %></div>
<% else %>
  <div class="btn"><%= link_to "Reviews", wine_reviews_path(@wine) %></div>
<% end %>
<% if current_user.admin %>
  <div class="btn"><%= link_to "Edit Wine", edit_wine_path(@wine) %></div><br />
  <div class="btn"><%= link_to "Delete Wine", wine_path(@wine), method: "DELETE" %></div><br />
<% end %>
<div class="btn"><%= link_to "Back to Wine List", wines_path %></div><br />
