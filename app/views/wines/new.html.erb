<h1>New Wine:</h1>
<%= form_for @wine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br />
  <%= f.label "Variety:" %>
  <%= f.collection_select(:variety_id, @varieties, :id, :name, include_blank: true) %> <br />
  <%= f.fields_for :variety do |v| %>
    <%= v.label "New Variety" %>
    <%= v.label :name %>
    <%= v.text_field :name %><br />
    <%= v.label :color %>
    <%= v.text_field :color %><br />
  <% end %>
  <%= f.submit "Create Wine" %>
<% end %>
