<% if !@variety.errors.empty? %>
  <% @variety.errors.full_messages.each do |error_message| %>
    <p class="error"><%= error_message %></p>
  <% end %>
<% end %>
<%= form_for @variety do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />
  <%= f.label :color %>
  <%= f.text_field :color %><br />
  <%= f.submit %>
<% end %>
